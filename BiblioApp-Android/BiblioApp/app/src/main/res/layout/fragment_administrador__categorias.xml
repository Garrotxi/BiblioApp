<?xml version="1.0" encoding="utf-8"?>
<!-- @Autor Saúl López Díez-->
<!-- Layout del fragmento del administrador que tendra listado de categorias y boton para gestionarlo-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Administrador.Categorias.Administrador_CategoriasFragment">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listViewCategorias"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_gallery" />

    <ImageButton
        android:id="@+id/boton_nueva_categoria"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/gradient_splash"
        android:onClick="nuevaCategoria"
        android:src="@drawable/ic_nuevo_usuario"
        android:textSize="10dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/boton_ordenar_categorias_asc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_flecha_arriba"
        android:background="@drawable/gradient_splash"
        android:textSize="10dp"
        android:textStyle="bold"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@id/boton_nueva_categoria"
        app:layout_constraintLeft_toRightOf="@id/boton_nueva_categoria"/>

    <ImageButton
        android:id="@+id/boton_ordenar_categorias_desc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_flecha_abajo"
        android:background="@drawable/gradient_splash"
        android:textSize="10dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@id/boton_ordenar_categorias_asc"
        app:layout_constraintLeft_toRightOf="@id/boton_ordenar_categorias_asc"/>

    <ImageButton
        android:id="@+id/boton_modificar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_modificar"
        android:background="@drawable/gradient_splash"
        android:onClick="detalleCategoria"
        android:textSize="10dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@id/boton_ordenar_categorias_desc"
        app:layout_constraintLeft_toRightOf="@id/boton_ordenar_categorias_desc"
        />

</androidx.constraintlayout.widget.ConstraintLayout>