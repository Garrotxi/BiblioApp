<!-- Layout del fragmento del administrador para añadir un nuevo prestamo-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Administrador.Prestamos.Administrador_NuevoPrestecFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.Administrador.Pantalla_Inicio_Administrador">

        <TextView
            android:id="@+id/textView_IdUsuari"
            android:layout_width="89dp"
            android:layout_height="15dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="47dp"
            android:text="Id Usuari"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText_IdUsuari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_IdUsuari"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_IdUsuari" />

        <TextView
            android:id="@+id/textView_IdLlibre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Id Llibre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_IdUsuari" />

        <EditText
            android:id="@+id/editText_IdLlibre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_IdLlibre"
            app:layout_constraintStart_toEndOf="@+id/textView_IdLlibre"
            app:layout_constraintStart_toStartOf="@+id/editText_IdUsuari" />

        <TextView
            android:id="@+id/textView_DataPrestec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Data Prestec"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_IdLlibre" />

        <EditText
            android:id="@+id/editText_DataPrestec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_DataPrestec"
            app:layout_constraintStart_toStartOf="@+id/editText_IdLlibre" />

        <TextView
            android:id="@+id/textView_DataDevolucioPrevista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Data Prevista\nDevolucio Prestec"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_DataPrestec" />

        <EditText
            android:id="@+id/editText_DataDevolucioPrevista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_DataDevolucioPrevista"
            app:layout_constraintStart_toStartOf="@+id/editText_DataPrestec" />z

        <TextView
            android:id="@+id/textView_Mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/boton_Registro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_DataPrestec" />

        <Button
            android:id="@+id/boton_Registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="144dp"
            android:layout_marginBottom="24dp"
            android:onClick="nuevoLibro"
            android:text="Añadir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>