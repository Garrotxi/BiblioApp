<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Administrador.Administrador_GestionLibrosFragment">

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listViewLibros"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_slideshow" />

    <Button
        android:id="@+id/boton_nuevo_libro"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="nuevoLibro"
        android:text="Nuevo Libro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/boton_ordenar_libros_asc"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Ordenar ↑"
        app:layout_constraintBaseline_toBaselineOf="@+id/boton_nuevo_libro"
        app:layout_constraintStart_toEndOf="@+id/boton_nuevo_libro" />
    <Button
        android:id="@+id/boton_ordenar_libros_desc"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Ordenar ↓"
        app:layout_constraintBaseline_toBaselineOf="@+id/boton_ordenar_libros_asc"
        app:layout_constraintStart_toEndOf="@id/boton_ordenar_libros_asc" />

    <Button
        android:id="@+id/boton_modificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Modificar"
        android:onClick="detalleLibro"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/boton_nuevo_libro"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/boton_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="buscarLibro"
        android:text="Buscar"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/boton_ordenar_libros_asc"
        app:layout_constraintStart_toEndOf="@+id/boton_modificar"/>
</androidx.constraintlayout.widget.ConstraintLayout>